generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  emailadd     String   @unique
  password  String
  createdAtDate DateTime @default(now())
  transactions Transaction[]
}

model Transaction {
  id         Int      @id @default(autoincrement())
  senderIdnumber   Int
  recipients  String
  amounts     Float
  currency   String
  statusT     String
  createdAtDate  DateTime @default(now())

  sender     User     @relation(fields: [senderIdnumber], references: [id])
}
